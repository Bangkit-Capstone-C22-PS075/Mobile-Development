<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_user"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_place_holder"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name_user"
            android:text="Nama"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/img_user"
            app:layout_constraintStart_toEndOf="@id/img_user"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fullstar"
            android:id="@+id/star1"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/tv_name_user"
            app:layout_constraintTop_toBottomOf="@id/tv_name_user"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fullstar"
            android:id="@+id/star2"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/star1"
            app:layout_constraintStart_toEndOf="@id/star1"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fullstar"
            android:id="@+id/star3"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/star2"
            app:layout_constraintStart_toEndOf="@id/star2"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fullstar"
            android:id="@+id/star4"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/star3"
            app:layout_constraintStart_toEndOf="@id/star3"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fullstar"
            android:id="@+id/star5"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/star4"
            app:layout_constraintStart_toEndOf="@id/star4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rating"
            android:text="5.0"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/star5"
            app:layout_constraintStart_toEndOf="@id/star5"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_place_holder"
            android:id="@+id/img_coment"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/star1"
            app:layout_constraintTop_toBottomOf="@id/star1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_comentar"
            android:text="isi Komentar"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_coment"
            app:layout_constraintStart_toStartOf="@id/img_coment"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>
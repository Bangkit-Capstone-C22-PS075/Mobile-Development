<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.DetailProductFragment">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="6dp"
        android:background="@drawable/bg_cardview"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_cardview"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/img_btn_chat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_chat"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/white"/>


            <ImageButton
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:id="@+id/img_btn_cart"
                android:background="@color/white"
                android:src="@drawable/image_cart"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@id/img_btn_chat"
                app:layout_constraintStart_toEndOf="@id/img_btn_chat"
                />
            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_pesan"
                android:text="Pesan Sekarang"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toEndOf="@id/img_btn_cart"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardview"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:id="@+id/btn_back"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <ImageView
            android:id="@+id/img_product"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_name_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:hint="Nama Product"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_product" />

        <TextView
            android:id="@+id/tv_description_product"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="14dp"
            android:hint="Decription"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/star1" />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_baseline_star"
            app:layout_constraintStart_toStartOf="@id/tv_name_produk"
            app:layout_constraintTop_toBottomOf="@id/tv_name_produk" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_baseline_star"
            app:layout_constraintStart_toEndOf="@id/star1"
            app:layout_constraintTop_toTopOf="@id/star1" />
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:id="@+id/star3"
            app:layout_constraintTop_toTopOf="@id/star2"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/star2"
            android:src="@drawable/ic_baseline_star"/>
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:id="@+id/star4"
            app:layout_constraintTop_toTopOf="@id/star3"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/star3"
            android:src="@drawable/ic_baseline_star"/>
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:id="@+id/star5"
            app:layout_constraintTop_toTopOf="@id/star4"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/star4"
            android:src="@drawable/ic_baseline_star"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_like"
            android:text="4.0"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/star5"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/star5"/>
       <View
           android:id="@+id/v1"
           android:layout_width="89dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="8dp"
           android:background="@drawable/bg_log_out"
           app:layout_constraintStart_toEndOf="@id/tv_like"
           app:layout_constraintTop_toTopOf="@id/tv_like"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sell"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:text="10Rb terjual"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/tv_like"
            app:layout_constraintStart_toStartOf="@id/v1"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:id="@+id/vline2"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_description_product"
            android:background="#F3F3F3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produk Lainnya"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/vline2"
            app:layout_constraintStart_toStartOf="@id/tv_description_product"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_product"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="46dp"
            android:layout_marginStart="9dp"
            tools:listitem="@layout/item_pakaian_horizontal"
            app:layout_constraintTop_toBottomOf="@id/vline2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:id="@+id/vline3"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/rv_product"
            android:background="#F3F3F3"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_place_holder"
            android:id="@+id/img_seller"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/vline3"
            app:layout_constraintStart_toStartOf="@id/tv_description_product"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_shopname"
            android:text="Nama Toko"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/img_seller"
            app:layout_constraintStart_toEndOf="@id/img_seller"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_active"
            android:text="beberapa menit yang lalu"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tv_shopname"
            app:layout_constraintStart_toStartOf="@id/tv_shopname"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_amount_product"
            android:text="10"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/Main"
            app:layout_constraintTop_toBottomOf="@id/img_seller"
            app:layout_constraintStart_toStartOf="@id/img_seller"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produk"
            android:textSize="13sp"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/tv_amount_product"
            app:layout_constraintStart_toEndOf="@id/tv_amount_product"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rating_seller"
            android:text="4.2"
            android:textSize="13sp"
            android:textColor="@color/Main"
            android:layout_marginStart="55dp"
            app:layout_constraintStart_toEndOf="@id/tv_amount_product"
            app:layout_constraintTop_toTopOf="@id/tv_amount_product"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Penilaian"
            app:layout_constraintTop_toTopOf="@id/tv_rating_seller"
            app:layout_constraintStart_toEndOf="@id/tv_rating_seller"
            />
        <View
            android:layout_width="106dp"
            android:layout_height="30dp"
            android:id="@+id/v2"
            android:background="@drawable/bg_follow_seller"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_shopname"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_visit_shopname"
            android:text="Kunjungi Toko"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/v2"
            app:layout_constraintTop_toTopOf="@id/v2"
            app:layout_constraintStart_toStartOf="@id/v2"
            app:layout_constraintBottom_toBottomOf="@id/v2"
            />
        <View
            android:layout_width="106dp"
            android:layout_height="30dp"
            android:id="@+id/v3"
            android:background="@drawable/bg_follow_seller"
            app:layout_constraintStart_toStartOf="@id/v2"
            app:layout_constraintTop_toBottomOf="@id/v2"
            android:layout_marginTop="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+Ikuti"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/v3"
            app:layout_constraintStart_toStartOf="@id/v3"
            app:layout_constraintEnd_toEndOf="@id/v3"
            app:layout_constraintBottom_toBottomOf="@id/v3"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:id="@+id/vline4"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_amount_product"
            android:background="#F3F3F3"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_coment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/vline4"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_coment"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>